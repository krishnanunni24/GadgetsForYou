                  <div class="col">
                    <div class="form-outline">
                      <input type="text" id="productName" name="name" class="form-control" required="true"/>
                      <label class="form-label" for="productName">Product name</label>
                    </div>
                  </div>
                  <div class="col">
                    <select class="form-select" name="catagory" aria-label="Catagory" >
