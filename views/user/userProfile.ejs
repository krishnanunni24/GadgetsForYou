<%-include('../partials/users/userProfileHeader')%>
<%-include('../partials/users/userProfileNav')%>



            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%-user.username%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%-user.email%>    
                                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        <%-user.phone%>
                    </div>
                  </div>
                  <hr>
                  
                   <%if(user.address.length > 0){%>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%-user.address[0].address%>
                    </div>
                  </div>
                  <hr>
                  <%} %>

                  
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info " href="/editProfileGet">Edit</a>
                    </div>
                  </div>
                </div>
              </div>

              



            </div>
          </div>

        </div>
