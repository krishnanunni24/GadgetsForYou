<%if(admin){%>
            
    <%-include('../partials/admin/adminHeader')%>
    <%-include('../partials/admin/adminSideNav')%>

  

  <%}else{%>

<%-include('../partials/users/userHeader')%>
   
  <%}
  %>



    <section class="h-100 gradient-custom mt-5">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-10 col-xl-8">
                    <div class="card" style="border-radius: 10px;">
                      <%if(admin){%>
            

                        <div class="card-header px-4 py-5">
                            <h5 class="text-muted mb-0">User: <span style="color: #a8729a;">
                                    <%-user.username%>
                                </span></h5>
                        </div>

                      <%}else{%>
                        <div class="card-header px-4 py-5">
                            <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;">
                                    <%-user.username%>
                                </span>!</h5>
                        </div>
                      <%}
                      %>
                        
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <p class="lead fw-normal mb-0" style="color: #a8729a;"><strong><%-products.length%> Products</strong></p>
                            </div>

                            <%for(var i=0;i< products.length; i++){%>
                            
                           
                            <div class="card shadow-0 border mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2">

                                            <img src="/uploads/<%-products[i].product.images[0].filename%>"
                                            class="img-fluid" alt="Phone">
                                            
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text mb-0 fw-bold"><em><%-products[i].product.name%></em></p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text mb-0"><%-products[i].product.catagory%></p>
                                        </div>
                                       
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text mb-0 ">Qty:<%-products[i].quantity%></p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-success fw-bold mb-0">₹ <%-products[i].product.price%></p>
                                        </div>
                                    </div>
                                   
                                </div>
                            </div>

                            

                            <%} %>

                            
                        </div>
                        <div class="card-footer border-0 px-4 py-5"
                            style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                                Total
                                paid: <span class="h2 mb-0 ms-2">₹ <%-products[0].total%></span></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


   